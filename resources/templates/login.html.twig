{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}|Connexion
{% endblock %}

{% block body %}
	<section class="col-lg-6 col-12 align-items-center mx-auto">
		<form method="post" action="signIn">
			<h1 class="mb-3 font-weight-normal">Login</h1>
			<label for="inputEmail">Email</label>
			<input type="email" value="{{ data.email }}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
			<label for="inputPassword">Password</label>
			<input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>
			{% if errors %}
				<div class="error text-danger">{{ errors }}</div>
			{% endif %}
			<button class="btn btn-lg btn-primary mb-3 me-3" type="submit">Connexion</button>


			<p>First time ?
				<a class="btn btn-outline-primary" href="{{ path('user') }}">Sign up</a>
			</p>
		</form>
	</section>
{% endblock %}
