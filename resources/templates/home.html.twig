{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	| Home
{% endblock %}

{% block body %}
	<section clas="mt-5">
		<div class="container my-5">
			<div class="row align-items-start">
				<div class="col">
					<div class="jumbotron text-center text-md-start">
						<div class="row align-items-center">
							<div class="col-12 col-md-6 order-1 order-md-0 mt-3 mt-md-0">
								<h1 class="display-4">Welcome</h1>
								<p class="lead">Welcome to Berlioz Cuistock</p>
								<hr class="my-4">
								<p>To start, you probably add recipes with one principal ingredient :</p>
								<form method="post" action="fetchRecipes">
									<label for="ingredient" class="form-label"/>
									<input type="text" name="ingredient" class="form-control mb-3" placeholder="One ingredient">
									<div class="col-12 d-flex justify-content-center justify-content-lg-start">
										<button type="submit" class="btn btn-primary">Add Recipes</button>
									</div>
								</form>
							</div>
							<div class="col-6 mx-auto me-md-0 col-md-5 px-md-5 order-0 order-md-1">
								<img src="{{ asset('images/logo.svg') }}" id="logo" alt="Berlioz logo">
							</div>
						</div>
					</div>
				</div>
				{% for item in data %}
					<p>{{ item }}</p>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
